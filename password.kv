#:kivy 2.0.0

<PasswordWidget>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.05)
        Label:
            size_hint: (0.15, 1)
            text: 'Password:'
        TextInput:
            id: password
            size_hint: (0.85, 1)
            password: True
            multiline: False

    FileChooserListView:
        id: filechooser
        size_hint: (1, 0.90)
        path: app.default_file

    Button:
        text: 'Select File'
        size_hint: (1, 0.05)
        on_press:
            app.password_key = password.text
            app.file_path = filechooser.selection
            app.CheckConditions()
